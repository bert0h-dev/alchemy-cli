#!/usr/bin/env bash

# ~/.alchemy/bin/alchemy - El arte de lo mÃ¡gico en tu terminal

export ALCHEMY_HOME="${ALCHEMY_HOME:=$HOME/.alchemy}"

source "$ALCHEMY_HOME/modules/colors.sh"
source "$ALCHEMY_HOME/modules/core.sh"
source "$ALCHEMY_HOME/modules/ui.sh"
source "$ALCHEMY_HOME/modules/plugins.sh"
source "$ALCHEMY_HOME/modules/config.sh"
source "$ALCHEMY_HOME/modules/update_notifier.sh"

check_for_update

log_command "$@"

case "$1" in
  "")
    log_title "â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”"
    log_title "â”‚        ðŸ”® ALCHEMY CLI        â”‚"
    log_title "â”‚     El arte de lo mÃ¡gico     â”‚"
    log_title "â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜"
    ;;
  theme)
    case "$2" in
      list)
        echo -e "${INFO}Temas disponibles:${RESET}"
        for file in "$ALCHEMY_HOME"/config/themes/*.json; do
          filename=$(basename "$file" .json)
          echo -e " â€¢ $filename"
        done
        ;;
      menu)
        show_theme_menu
        ;;
      *)
        load_theme "$2"
        ;;
    esac
    ;;
  plugin)
    case "$2" in
      list)
        list_plugins
        ;;
      install)
        install_plugin "$3"
        ;;
      remove|rm)
        uninstall_plugin "$3"
        ;;
      menu)
        show_plugin_menu
        ;;
      help)
        show_plugin_help "$@"
        ;;
      *)
        gum style --foreground 3 "Uso: alchemy plugin [list|install|remove|menu|help]"
        ;;
    esac
    ;;
  history)
    run_history_plugin
    ;;
  clear-history)
    clear_history
    ;;
  config)
    case "$2" in
      get)
        get_config_value "$3"
        ;;
      set)
        set_config_value "$3" "$4"
        load_theme "$(get_config_value "theme")"
        ;;
      reset)
        reset_config
        ;;
      *)
        gum style --foreground 3 "Uso: alchemy config [get|set|reset]"
        ;;
    esac
    ;;
  update)
    gum spin --title "Verificando actualizaciones..." -- sleep 1

    TMP_DIR=$(mktemp -d)
    REPO_URL="https://github.com/bert0h-dev/alchemy-cli/archive/refs/heads/main.tar.gz"

    gum spin --title "Descargando Ãºltima versiÃ³n..." -- curl -fsSL "$REPO_URL" | tar xz -C "$TMP_DIR"

    gum spin --title "Actualizando archivos..." -- sleep 1
    cp -rf "$TMP_DIR/alchemy-cli-main/"* "$ALCHEMY_HOME/"

    # Actualizar nÃºmero de versiÃ³n local
    REMOTE_VERSION=$(curl -fsSL "https://github.com/bert0h-dev/alchemy-cli/raw/main/LATEST_VERSION")
    jq ".version = \"$REMOTE_VERSION\"" "$ALCHEMY_HOME/config/version.json" > /tmp/tmp.json && mv /tmp/tmp.json "$ALCHEMY_HOME/config/version.json"

    gum style \
      --border normal \
      --margin "1" \
      --padding "1" \
      --align center \
      --width 40 \
      --foreground 46 \
      "âœ” Alchemy actualizado" \
      "VersiÃ³n: v$REMOTE_VERSION" \
      "" \
      "Â¡Listo para seguir usando!"
    ;;
  help)
    log_title "ðŸ“˜ Ayuda del CLI"
    echo -e "${INFO}â€¢ alchemy${RESET}               âž¤ Mostrar banner"
    echo -e "${INFO}â€¢ alchemy theme list${RESET}    âž¤ Listar temas"
    echo -e "${INFO}â€¢ alchemy theme menu${RESET}    âž¤ Seleccionar tema interactivo"
    echo -e "${INFO}â€¢ alchemy theme <nombre>${RESET} âž¤ Cambiar tema"
    echo -e "${INFO}â€¢ alchemy plugin list${RESET}   âž¤ Listar plugins"
    echo -e "${INFO}â€¢ alchemy plugin menu${RESET}   âž¤ MenÃº de plugins"
    echo -e "${INFO}â€¢ alchemy plugin install <nombre>${RESET} âž¤ Instalar plugin"
    echo -e "${INFO}â€¢ alchemy plugin help <nombre>${RESET} âž¤ Ayuda de plugin"
    echo -e "${INFO}â€¢ alchemy config get/set/reset âž¤ ConfiguraciÃ³n"
    echo -e "${INFO}â€¢ alchemy update${RESET}        âž¤ Simular actualizaciÃ³n"
    echo -e "${INFO}â€¢ alchemy init${RESET}          âž¤ Inicializar estructura"
    echo -e "${INFO}â€¢ alchemy export-config${RESET} âž¤ Exportar configuraciÃ³n"
    echo -e "${INFO}â€¢ alchemy import-config <ruta>${RESET} âž¤ Importar configuraciÃ³n"
    ;;
  init)
    gum style --border normal --margin "1" --padding "1" "ðŸ”§ Inicializando Alchemy..."

    mkdir -p "$ALCHEMY_HOME"/{config,plugins,modules,themes}
    cp "$ALCHEMY_HOME/themes/default.json" "$ALCHEMY_HOME/config/settings.json"
    gum style --foreground 46 "âœ” Carpeta base creada."

    echo "Â¿Deseas instalar plugins bÃ¡sicos?" | gum choose --item-separator " " yes no
    if [ $? -eq 0 ]; then
      install_plugin example
      install_plugin history
    fi

    gum style --foreground 46 "âœ” Alchemy inicializado."
    ;;
  export-config)
    export_config
    ;;
  import-config)
    import_config "$2"
    ;;
  version|v)
    VERSION=$(jq -r '.version' "$ALCHEMY_HOME/config/version.json")
    DATE=$(jq -r '.build_date' "$ALCHEMY_HOME/config/version.json")
    gum style --border normal --margin "1" --padding "1" "ðŸ”® Alchemy CLI v$VERSION"
    echo -e "${INFO}Build date:${RESET} $DATE"
    ;;
  *)
    log_error "Comando desconocido: $1"
    ;;
esac